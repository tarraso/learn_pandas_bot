# ============================================
# Environment Configuration
# ============================================

# Environment: development, production
DJANGO_ENV=development

# ============================================
# Django Settings
# ============================================

# Debug mode (NEVER set to True in production!)
DEBUG=True

# Secret key for Django (generate a strong one for production!)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-dev-key-9x7@k2m!p4v$w8q#n5t&e3r1y6u*i8o-l0a+s2d4f6g8h9j0

# Allowed hosts (comma-separated)
# Production example: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================

# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/pandas_bot_db

# PostgreSQL credentials (for docker-compose)
POSTGRES_DB=pandas_bot_db
POSTGRES_USER=user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ============================================
# Telegram Bot
# ============================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# Web App Configuration
# ============================================

# Web App URL for Telegram Mini App
# Development (with ngrok): https://your-ngrok-url.ngrok-free.app
# Production: https://yourdomain.com
WEBAPP_URL=http://localhost:3000

# For development with ngrok
NGROK_URL=https://your-ngrok-url.ngrok-free.app

# Additional CORS origins (comma-separated, optional)
CORS_ADDITIONAL_ORIGINS=

# ============================================
# OpenAI API (optional)
# ============================================

# For generating additional content
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Production-only Settings
# ============================================

# SSL/TLS (set to False for local development)
SECURE_SSL_REDIRECT=False

# Domain for health checks
DOMAIN=yourdomain.com

# VPS Configuration (for CI/CD)
VPS_HOST=your.vps.ip.address
VPS_USER=deploy
VPS_PORT=22
VPS_APP_DIR=/opt/pandas_bot
